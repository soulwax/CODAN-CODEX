    "version": "0.2.0",
    "configurations": [
        {
            "command": "npm run watch",
            "name": "Compile & Watch TS (npm)",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "name": "nodemon",
            "program": "${workspaceFolder}/dist/index.js",
            "request": "launch",
            "restart": true,
            "runtimeExecutable": "nodemon",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        }
    ]
}